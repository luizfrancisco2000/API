<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="cptech.com.controltutor.Interface.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <!--ImageView
                    android:id="@+id/image_menu"
                    android:layout_width="@android:dimen/thumbnail_height"
                    android:layout_height="@android:dimen/thumbnail_height"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/colorCharacter"
                    android:src="@drawable/aluno" /-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <ImageButton
                android:id="@+id/button_prevUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:backgroundTint="#c06014"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@color/colorBackground" />

            <ImageButton
                android:id="@+id/button_nextUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:backgroundTint="#c06014"
                android:src="@android:drawable/ic_media_next"
                android:tint="@color/colorBackground" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/containerForFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/colorBackground" />
    </LinearLayout>

</RelativeLayout>
