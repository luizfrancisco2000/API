<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Interface.Discente.PerfilAlunoActivity">

    <LinearLayout
        android:id="@+id/layoutPerfilAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp">

            <ImageView
                android:id="@+id/imgProfessor"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/professor" />

            <TextView
                android:id="@+id/txtProfessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Perfil Professor"
                android:textAppearance="@style/AppTheme.letraembranco"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/sairButton"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_lock_power_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/listaProfessor"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/materiais" />

                <TextView
                    android:id="@+id/txtMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="Gerenciar Materiais"
                    android:textAppearance="@style/AppTheme.letraembranco" />
            </LinearLayout>

            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/Relatorio"
                    android:layout_width="120dp"
                    android:layout_height="120dp"

                    app:srcCompat="@drawable/relatorio" />

                <TextView

                    android:id="@+id/txtRelatorio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="Visualizar Relatórios"
                    android:textAppearance="@style/AppTheme.letraembranco" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/galCodes"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/alunos" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtCodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="Alunos &amp; Tutores"

                    android:textAppearance="@style/AppTheme.letraembranco" />
            </LinearLayout>

            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgMateriais"
                    android:layout_width="120dp"
                    android:layout_height="120dp"

                    app:srcCompat="@drawable/seguranca" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtMateriais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="Configurações de Segurança"
                    android:textAppearance="@style/AppTheme.letraembranco" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>