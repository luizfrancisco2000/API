<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_all_notifi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/solicit_notifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="21dp"
        android:text="Dado a pimbada"
        android:textAppearance="@style/AppTheme.letraembranco" />

    <TextView
        android:id="@+id/mensagem_notifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="20dp"
        android:text="Assunto"
        android:textAppearance="@style/AppTheme.letraembranco"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/accept_notifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mensagem_notifi"
        android:layout_marginBottom="-53dp"
        android:layout_toEndOf="@+id/solicit_notifi"
        android:src="@drawable/ic_check_black_24dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/decline_notifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solicit_notifi"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/accept_notifi"
        android:src="@drawable/ic_clear_black_24dp" />
</RelativeLayout>