            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Interface.Login.LoginLayoutTutor"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Interface.Tutor.PerfilTutor"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Interface.Discente.Fragment.MenuAluno"
            android:label="@string/title_activity_menu_aluno"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Interface.Professor.Fragment.MenuProfesso"
            android:label="@string/title_activity_menu_professo"
